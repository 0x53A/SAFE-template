{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "command": "dotnet",
            "args": [ "build" ],
            "type": "shell",
            "options": { "cwd": "${workspaceFolder}/src/Server" },
            "group": "build",
            "problemMatcher": [ "$msCompile" ]
        },
        {
            "label": "Watch Server",
            "command": "dotnet",
            "args": [ "watch", "run" ],
            "type": "shell",
            "options": { "cwd": "${workspaceFolder}/src/Server" },
            "group": "build",
            "problemMatcher": [ "$msCompile" ]
        },
        {
            "label": "Restore Client",
            "command": "yarn install --frozen-lockfile",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Watch Client",
            "command": "dotnet",
            "args": [ "fable", "webpack-dev-server", "--port free" ],
            "type": "shell",
            "options": { "cwd": "${workspaceFolder}/src/Client" },
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "fileLocation": "absolute",
                "background": {
                    "beginsPattern": { "regexp": "Fable" },
                    "endsPattern": { "regexp": "(Compiled successfully|Compiled with warnings|Error)" }
                },
                "pattern": {
                    "regexp": "^(.*)\\((\\d+),(\\d+)\\): \\((\\d+),(\\d+)\\) (warning|error) FABLE: (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                }
            }
        }
    ]
}