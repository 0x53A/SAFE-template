{
  "$schema": "http://json.schemastore.org/template",
  "author": "Tomasz Heimowski",
  "classifications": [ "F#", "Web", "Suave", "Fable", "Elmish", "Giraffe", "Bulma" ],
  "name": "SAFE-Stack Web App v0.4.3",
  "tags": {
    "language": "F#",
    "type": "project"
  },
  "identity": "SAFE.Template",
  "shortName": "SAFE",
  "symbols": {
    "Server": {
      "type": "parameter",
      "dataType": "choice",
      "defaultValue": "suave",
      "choices": [
        {
          "choice": "suave",
          "description": "lightweight, non-blocking web server (standalone)"
        },
        {
          "choice": "giraffe",
          "description": "a functional micro web framework based on ASP.NET Core"
        }
      ]
    },
    "Fulma": {
      "type": "parameter",
      "dataType": "choice",
      "defaultValue": "none",
      "choices": [
        {
          "choice": "none",
          "description": "don't add Fulma (Fable bindings for Bulma.io) at all"
        },
        {
          "choice": "basic",
          "description": "adds Fulma basic template"
        },
        {
          "choice": "landing",
          "description": "adds Fulma with 'Landing' Bulma template from https://dansup.github.io/bulma-templates/"
        }
      ]
    },
    "Remoting": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "description": "adds Fable.Remoting to server and client"
    }
  },
  "sources": [
    {
      "exclude": "**/.template.config/**/*",
      "modifiers": [
        {
          "condition": "(Server == \"suave\")",
          "exclude": [ "**/ProgramGiraffe.fs" ],
          "rename": {
            "ProgramSuave.fs": "Program.fs"
          }
        },
        {
          "condition": "(Server == \"giraffe\")",
          "exclude": [ "**/ProgramSuave.fs" ],
          "rename": {
            "ProgramGiraffe.fs": "Program.fs"
          }
        }
      ]
    }
  ],
  "SpecialCustomOperations": {
    "**/paket.*": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [ "#if" ],
            "else": [ "#else" ],
            "elseif": [ "#elseif" ],
            "endif": [ "#endif" ],
            "trim": "true",
            "wholeLine": "true"
          }
        }
      ]
    }
  }
}
